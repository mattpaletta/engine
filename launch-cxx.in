#!/bin/sh
# Xcode generator doesn't include the compiler as the
# first argument, Ninja and Makefiles do. Handle both cases.
if [[ "$1" == "/usr/bin/g++" ]] ; then
    shift
fi

export CCACHE_CPP2=true
exec "/usr/bin/ccache" "/usr/bin/g++" "$@"

export CCACHE_CPP2=true
exec "/usr/bin/ccache" "/usr/bin/gcc" "$@"